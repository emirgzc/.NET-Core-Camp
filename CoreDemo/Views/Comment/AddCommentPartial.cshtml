
<head>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>
</head>

<div class="comment-top">
    <h4>Bir Yorum Bırakın</h4>
    <div class="comment-bottom">
        <form id="subForm" method="post">
            <input class="form-control" type="text" name="CommentUserName" placeholder="Adınız Soyadınız" required="">
            <input class="form-control" type="text" name="CommentTitle" placeholder="Konu" required="">
            <textarea class="form-control" name="CommentContent" placeholder="Mesajınız..." required=""></textarea>
            <button type="submit" id="btn" class="btn btn-primary submit">Yorum Yap</button>

            <div id="sonuc" class="mt-3"></div>
        </form>
    </div>
</div>

<script type="text/javascript">

    $(function () {
        $("#btn").click(function (e) {
            var bolum = document.createElement("div");
            bolum.className = "alert alert-success";
            bolum.innerHTML = "Kayıt Başarılı";
            document.body.appendChild(bolum);
            e.preventDefault();
            var veri = $("#subForm").serialize();
            $.ajax({
                type: "post",
                url: "/Comment/AddCommentPartial/",
                data: veri,
                success: function (f) {
                    $("#sonuc").html(bolum);
                    setTimeout(() => { window.location.reload() }, 7500);
                }
            });
        });
    });
</script>